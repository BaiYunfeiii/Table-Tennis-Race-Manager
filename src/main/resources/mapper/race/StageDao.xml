<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.gdut.imis.byf3114004859.modules.race.dao.StageDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="edu.gdut.imis.byf3114004859.modules.race.entity.StageEntity" id="stageMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="order" column="order"/>
        <result property="raceId" column="race_id"/>
        <result property="status" column="status"/>
    </resultMap>

	<select id="queryObject" resultType="edu.gdut.imis.byf3114004859.modules.race.entity.StageEntity">
		select * from race_stage where id = #{value}
	</select>

	<select id="queryList" resultType="edu.gdut.imis.byf3114004859.modules.race.entity.StageEntity">
		select * from race_stage
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from race_stage 
	</select>
	 
	<insert id="save" parameterType="edu.gdut.imis.byf3114004859.modules.race.entity.StageEntity" useGeneratedKeys="true" keyProperty="id">
		insert into race_stage
		(
			`name`, 
			`order`, 
			`race_id`, 
			`status`
		)
		values
		(
			#{name}, 
			#{order}, 
			#{raceId}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="edu.gdut.imis.byf3114004859.modules.race.entity.StageEntity">
		update race_stage 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="order != null">`order` = #{order}, </if>
			<if test="raceId != null">`race_id` = #{raceId}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from race_stage where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from race_stage where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>