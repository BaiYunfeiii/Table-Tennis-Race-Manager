<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.gdut.imis.byf3114004859.modules.race.dao.RaceDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="edu.gdut.imis.byf3114004859.modules.race.entity.RaceEntity" id="raceMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="place" column="place"/>
        <result property="details" column="details"/>
        <result property="status" column="status"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="edu.gdut.imis.byf3114004859.modules.race.entity.RaceEntity">
		select * from race_race where id = #{value}
	</select>

	<select id="queryList" resultType="edu.gdut.imis.byf3114004859.modules.race.entity.RaceEntity">
		select * from race_race
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from race_race 
	</select>
	 
	<insert id="save" parameterType="edu.gdut.imis.byf3114004859.modules.race.entity.RaceEntity" useGeneratedKeys="true" keyProperty="id">
		insert into race_race
		(
			`name`, 
			`start_time`, 
			`end_time`, 
			`place`, 
			`details`, 
			`status`, 
			`create_user_id`, 
			`create_time`
		)
		values
		(
			#{name}, 
			#{startTime}, 
			#{endTime}, 
			#{place}, 
			#{details}, 
			#{status}, 
			#{createUserId}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="edu.gdut.imis.byf3114004859.modules.race.entity.RaceEntity">
		update race_race 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="startTime != null">`start_time` = #{startTime}, </if>
			<if test="endTime != null">`end_time` = #{endTime}, </if>
			<if test="place != null">`place` = #{place}, </if>
			<if test="details != null">`details` = #{details}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from race_race where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from race_race where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>